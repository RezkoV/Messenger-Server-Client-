<Window x:Class="MessengerClient.UserProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessengerClient"
        mc:Ignorable="d"
        Title="UserProfileWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <Image Name="AvatarImage" Width="100" Height="100" Margin="5"/>
            <Button Name="UploadAvatarButton" Content="Загрузить аватар" Width="120" Click="UploadAvatarButton_Click" Height="19"/>
            <TextBox x:Name="UserNameTextBox" FontWeight="Bold" FontSize="16" Width="234"/>
            <TextBlock Name="StatusTextBlock" FontWeight="Bold" FontSize="16" Margin="5"/>
            <TextBox x:Name="AboutTextBox" FontStyle="Italic" FontSize="12" TextWrapping="Wrap" Height="60" RenderTransformOrigin="0.501,0.479" Width="372"/>
            <Button x:Name="SaveButton" Content="Сохранить" Width="80" Click="SaveButton_Click"/>
            <Button x:Name="CloseButton" Content="Закрыть" Width="80" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
