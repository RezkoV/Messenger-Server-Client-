<Window x:Class="MessengerClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessengerClient"
        mc:Ignorable="d"
        Title="Messenger" Height="400" Width="600">
    
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\User\Desktop\Messange\MessengerClient\MessengerClient\Resources\background.jpg"></ImageBrush>
        </Grid.Background>
        <ComboBox Name="LanguageSelector" SelectionChanged="LanguageSelector_SelectionChanged" HorizontalAlignment="Left" Margin="10,344,0,10" Width="75">
            <ComboBoxItem Content="English"/>
            <ComboBoxItem Content="Русский"/>
        </ComboBox>
        <TextBox x:Name="MessageInput" Width="400" Height="30" VerticalAlignment="Bottom" Margin="10"></TextBox>
        <Button x:Name="SendButton" Height="30" VerticalAlignment="Bottom" Margin="500,0,26,10" Click="SendButton_Click">
            <Image Source="C:\Users\User\Desktop\Messange\MessengerClient\MessengerClient\Resources\sendicon.png" Width="50"></Image>
        </Button>
        <ListBox x:Name="MessagesList" VerticalAlignment="Top" Margin="10,10,10,50"/>
    </Grid>
</Window>
